@model IEnumerable<ModelLayer.Employee>
@{ 
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>


<div style="width: 100%; float: left; background-color: greenyellow;">
    <div style="width: 25%; float: left; padding: 1%; background: #4cff00;">
        ID
    </div>
    <div style="width: 25%; float: left; padding: 1%; background: #4cff00;">
        Name
    </div>
    <div style="width: 25%; float: left; padding: 1%; background: #4cff00;">
        Contact
    </div>
    <div style="width: 25%; float: left; padding: 1%; background: #4cff00;">
        Address
    </div>
    @{
        foreach (var employee in Model)
        {
            <div style="width: 25%; float: left; padding: 1%;">
                @employee.ID
            </div>
            <div style="width: 25%; float: left; padding: 1%;">
                @employee.Name
            </div>
            <div style="width: 25%; float: left; padding: 1%;">
                @employee.ContactNumber
            </div>
            <div style="width: 25%; float: left; padding: 1%;">
                @employee.Addres
            </div>
        }
    }
</div>